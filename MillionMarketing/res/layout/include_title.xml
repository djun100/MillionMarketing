<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bg" >

    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:onClick="onClick_Left"
        android:src="@drawable/selector_title_btn_left" />

    <TextView
        android:id="@+id/tv_pagetitle"
        android:text=""
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ib_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:onClick="onClick_Main"
        android:paddingRight="10dp"
        android:src="@drawable/selector_title_btn_personalcenter" />

</RelativeLayout>