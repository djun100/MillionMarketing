<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- 包裹周围框子用置于底层内容的上层 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <!-- 第二层上侧 -->

            <ImageButton
                android:id="@+id/ib_"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main1_travel_bg" />

            <ImageButton
                android:id="@+id/ib_travel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main1_travel_bg"
                android:src="@drawable/selector_main1_travel" />

            <ImageButton
                android:id="@+id/ib_invest"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main1_invest_bg"
                android:src="@drawable/selector_main1_invest" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <!--  -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-28dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <!-- 第三层中靠右侧 -->

                    <ImageButton
                        android:id="@+id/ib_weather"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/selector_main1_weather_bg" />
                    <!-- 天气层,由于左上角块遮罩，所以下移 -->

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="40dp" >

                        <!-- 天气加天气图标 -->

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal" >

                            <!-- 天气加温度 -->

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:layout_marginLeft="-20dp"
                                android:orientation="vertical" >

                                <!-- 天气 -->

                                <TextView
                                    android:id="@+id/tv_weather"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="今日天气"
                                    android:textColor="#ff000000"
                                    android:textSize="13sp" />
                                <!-- 温度 -->

                                <TextView
                                    android:id="@+id/tv_temprature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#ff000000"
                                    android:textSize="13sp" />
                            </LinearLayout>
                            <!-- 天气图标 -->

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="-50dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/iv_weather"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- 地区图标加地理位置 -->

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="0dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="-10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <!-- 地理位置 -->

                            <TextView
                                android:id="@+id/tv_temprature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上海浦东"
                                android:textColor="#ff000000"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <!-- 第四层中靠右侧 -->

                    <ImageButton
                        android:id="@+id/ib_messages"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/selector_main1_messages_bg"
                        android:src="@drawable/selector_main1_messages" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <!-- 第五层中靠右侧 -->

                    <ImageButton
                        android:id="@+id/ib_notice"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/selector_main1_notice_bg"
                        android:src="@drawable/selector_main1_notice" />
                </LinearLayout>
            </LinearLayout>
            <!--  -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_lionbox" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <!-- 第六层下侧 -->

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <!-- 背景头像 -->

                <ImageView
                    android:id="@+id/iv_portrait"
                    android:layout_gravity="center"
                    
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/boy" />

                <ImageButton
                    android:id="@+id/ib_personalcenter"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/selector_main1_personalcenter_bg" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/ib_null"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main1_achievements_bg"
                android:src="@drawable/selector_main1_achievements" />

            <ImageButton
                android:id="@+id/ib_exchange"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_main1_exchange_bg"
                android:src="@drawable/selector_main1_exchange" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:background="@drawable/main_flow_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="lion"
            android:textColor="#ffffb246"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:text="box"
            android:textColor="#ffffb246"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <!-- 顶层namebox -->
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="85dp"
        android:paddingTop="210dp"
        android:visibility="gone" >

        <!-- 聊天消息数量层 -->

        <ImageView
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:background="@drawable/main_message_sum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-5dp"
            android:text="2"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="85dp"
        android:paddingTop="335dp"
        android:visibility="gone" >

        <!-- 系统通知数量层 -->

        <ImageView
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:background="@drawable/main_message_sum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-5dp"
            android:text="2"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_usercenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingTop="450dp"
        android:visibility="gone" >

        <!-- 个人中心提示层 -->

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/main_name_center" />
        <!-- 字符串层namebox\ncenter -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="neobox"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-15dp"
                android:text="center"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>