<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/catering_base_map"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_personal_operate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <!-- 标题栏操作 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 标题栏 -->

                <LinearLayout
                    android:id="@+id/rl_title"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/taskbar"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/activity_horizontal_margin" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_navigation_frame"
                        android:paddingTop="@dimen/activity_navigation_frame" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="旅游"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bt_travel_return"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector"
                        android:text="返回"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_navigation_frame"
                android:paddingRight="@dimen/activity_navigation_frame"
                android:paddingTop="@dimen/activity_navigation_frame" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/travel_xizang" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/travel_base_map" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/travel_red_heart" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="23"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_navigation_frame"
                android:paddingLeft="@dimen/activity_navigation_frame"
                android:paddingTop="@dimen/activity_navigation_frame" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/travel_one" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/travel_base_map" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/travel_red_heart" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="53"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/travel_two" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/travel_base_map" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/travel_red_heart" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="62"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_navigation_frame"
                android:paddingRight="@dimen/activity_navigation_frame"
                android:paddingTop="@dimen/activity_navigation_frame" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/travel_three" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/travel_base_map" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/travel_red_heart" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="64"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_navigation_frame"
                android:paddingTop="@dimen/activity_navigation_frame" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/travel_four" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/travel_base_map" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/travel_red_heart" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="35"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- android:layout_alignParentLeft="true" -->
        <!-- 设置动画 -->

        <Button
            android:id="@+id/button_composer_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/composer_sleep" >
        </Button>

        <Button
            android:id="@+id/btn_shortcut_myfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/shortcut_myfriends" >

            <!-- android:layout_above="@id/button_composer_sleep" -->
        </Button>

        <Button
            android:id="@+id/btn_shortcut_myaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/shortcut_myaccount" >
        </Button>

        <Button
            android:id="@+id/btn_shortcut_myachieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/shortcut_myachieve" >

            <!-- android:layout_above="@id/button_composer_music" -->
        </Button>

        <Button
            android:id="@+id/btn_shortcut_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/shortcut_position" >

            <!-- android:layout_above="@id/button_composer_place" -->
        </Button>

        <Button
            android:id="@+id/btn_shortcut_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/shortcut_info" >

            <!-- android:layout_above="@id/button_composer_with" -->
        </Button>

        <Button
            android:id="@+id/button_friends_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dp"
            android:background="@drawable/select_btn_friend_set"
            android:src="#00000000" >

            <!-- android:layout_above="@id/button_composer_camera" -->
        </Button>
        <!-- android:layout_marginBottom="10dip" -->
    </RelativeLayout>

</FrameLayout>